<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/bodybuilding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/round_rantangle_white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bodybuildingImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_btn_setsearch_filter_bodybuilding_off" />

                <TextView
                    android:id="@+id/bodybuildingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="보디빌딩"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/round_rantangle_white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dietImage"
                    android:layout_width="27dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_btn_setsearch_filter_diet_off" />

                <TextView
                    android:id="@+id/dietText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="다이어트"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fitness"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/round_rantangle_white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fitnessImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_btn_setsearch_filter_fitness_off" />

                <TextView
                    android:id="@+id/fitnessText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="휘트니스"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/round_rantangle_white"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="시"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/city"
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_spinner">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/round_rantangle_white"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/townText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="구"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/town"
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_spinner">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/round_rantangle_white"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dongText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="동"
                android:textColor="#BDBDBD"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/dong"
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_spinner">

            </Spinner>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_ractangle_skyblue"
        android:text="이 조건의 고객 찾기"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>