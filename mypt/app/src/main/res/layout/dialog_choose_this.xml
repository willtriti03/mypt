<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
            <ImageView
                android:id="@+id/dialog_profil"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/pro"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박스트롱"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#757575"/>
            <LinearLayout
                android:id="@+id/dialog_starbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dialog_star1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_reviewwrite_star_on"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/dialog_star2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_reviewwrite_star_on"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/dialog_star3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_reviewwrite_star_on"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/dialog_star4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_reviewwrite_star_on"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/dialog_star5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/btn_reviewwrite_star_off"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/dialog_explain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="운동을 하고 싶으면 하라고 좀. 우리앱 써서 빨리빨리 해."
                android:textSize="12sp"
                android:textColor="#BDBDBD"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_inform"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#000000">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/dialog_cancle"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="취소"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/dialog_yes"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="PT 받기"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>