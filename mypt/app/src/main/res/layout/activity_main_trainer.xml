<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jungjune.mypt.Activity.MainActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/search_bar"
            android:background="@drawable/tab_search_btn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_ractangle_skyblue"
                    android:id="@+id/bestBtn"
                    android:layout_marginRight="12dp"
                    android:text="BEST"
                    android:textColor="#ffffff" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_rantangle_white"
                    android:id="@+id/majchumBtn"
                    android:layout_marginRight="12dp"
                    android:text="맞춤 검색"
                    android:textColor="#BDBDBD" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_rantangle_white"
                    android:id="@+id/search_Cunsumer"
                    android:layout_marginRight="12dp"
                    android:text="고객 검색"
                    android:textColor="#BDBDBD" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_rantangle_white"
                    android:id="@+id/mypageBtn"
                    android:layout_marginRight="12dp"
                    android:text="마이페이지"
                    android:textColor="#BDBDBD" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.9"
        android:clipChildren="false"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</LinearLayout>
