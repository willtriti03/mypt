<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="0dp">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#757575"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/gray_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/bodybuilding"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/round_rantangle_white"
                    android:gravity="center"
                    android:layout_marginRight="3dp">
                    <ImageView
                        android:id="@+id/bodybuildingImage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_btn_setsearch_filter_bodybuilding_off"/>
                    <TextView
                        android:id="@+id/bodybuildingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="보디빌딩"
                        android:textSize="14sp"
                        android:textColor="#BDBDBD" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/diet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rantangle_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dietImage"
                        android:layout_width="27dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_btn_setsearch_filter_diet_off" />

                    <TextView
                        android:id="@+id/dietText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="다이어트"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fitness"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/round_rantangle_white"
                    android:gravity="center"
                    android:layout_marginLeft="3dp">
                    <ImageView
                        android:id="@+id/fitnessImage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_btn_setsearch_filter_fitness_off" />

                    <TextView
                        android:id="@+id/fitnessText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="휘트니스"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/gray_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:background="@drawable/round_rantangle_white"
                        android:orientation="horizontal"
                        android:layout_marginRight="7dp"
                        android:gravity="center|right"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/cityText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="시"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/city"
                            android:layout_width="12dp"
                            android:layout_height="8dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/ic_spinner">

                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:background="@drawable/round_rantangle_white"
                        android:orientation="horizontal"
                        android:layout_marginRight="7dp"
                        android:gravity="center|right"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/townText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="구"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"/>

                        <Spinner
                            android:id="@+id/town"
                            android:layout_width="12dp"
                            android:layout_height="8dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/ic_spinner">

                        </Spinner>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:background="@drawable/round_rantangle_white"
                        android:orientation="horizontal"
                        android:layout_marginRight="7dp"
                        android:gravity="center|right"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/dongText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"/>

                        <Spinner
                            android:id="@+id/dong"
                            android:layout_width="12dp"
                            android:layout_height="8dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/ic_spinner">

                        </Spinner>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원하는 1회 금액"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/gray_line" />
                <EditText
                    android:id="@+id/money"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:hint="금액"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:background="@drawable/round_rantangle_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원하는 회수"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/gray_line" />
                <EditText
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="15dp"
                    android:hint="회수"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:background="@drawable/round_rantangle_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세설명"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#757575" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/gray_line" />
                <EditText
                    android:id="@+id/introduce"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:gravity="top"
                    android:hint="상세설명"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:background="@drawable/round_rantangle_white"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>