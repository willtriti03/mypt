<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="0dp">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#757575"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/gray_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/bodybuilding"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/round_rantangle_white"
                    android:gravity="center"
                    android:layout_marginRight="3dp">
                    <ImageView
                        android:id="@+id/bodybuildingImage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_btn_setsearch_filter_bodybuilding_off"/>
                    <TextView
                        android:id="@+id/bodybuildingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="보디빌딩"
                        android:textSize="14sp"
                        android:textColor="#BDBDBD" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/diet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_rantangle_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dietImage"
                        android:layout_width="27dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_btn_setsearch_filter_diet_off" />

                    <TextView
                        android:id="@+id/dietText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="다이어트"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fitness"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/round_rantangle_white"
                    android:gravity="center"
                    android:layout_marginLeft="3dp">
                    <ImageView
                        android:id="@+id/fitnessImage"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_btn_setsearch_filter_fitness_off" />

                    <TextView
                        android:id="@+id/fitnessText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="휘트니스"
                        android:textColor="#BDBDBD"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>