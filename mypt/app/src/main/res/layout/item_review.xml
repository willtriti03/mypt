<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star_one"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_reviewwrite_star_on" />

        <ImageView
            android:id="@+id/star_two"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_reviewwrite_star_on" />

        <ImageView
            android:id="@+id/star_three"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_reviewwrite_star_on" />

        <ImageView
            android:id="@+id/star_four"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_reviewwrite_star_on" />

        <ImageView
            android:id="@+id/star_five"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_reviewwrite_star_off" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1시간 전"
            android:textAlignment="textEnd"
            android:textColor="#afafaf"
            android:textSize="12dp" />
    </LinearLayout>

        <TextView
            android:id="@+id/context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="이분은 이분이분해서 이분이분하네요 정말.. 최고입니다."
            android:layout_gravity="left"
            android:textColor="#626262"
            android:textSize="12sp" />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_box_red"
            android:gravity="center"
            android:text="신고"
            android:textColor="#fff"
            android:textSize="12sp" />
</LinearLayout>